<div class="columns">
  <div class="column is-half is-offset-one-quarter">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">Create new question</p>
      </header>

      <div class="card-content">
        <div class="content">
          <%= form_with model: @question, local: true do |f| %>
            <div class="field">
              <%= f.label :title, class: "label" %>
              <div class="control">
                <%= f.text_field :title, autofocus: true, placeholder: "Title", class: "input" %>
              </div>
            </div>

            <div class="field">
              <%= f.label :text, class: "label" %>
              <div class="control">
                <%= f.text_area :text, placeholder: "Text", rows: 10, class: "textarea" %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.submit "Submit", class: "button is-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
